# Top-most EditorConfig file
root = true

# Global settings
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false

# React
[**.jsx]
indent_size = 4

# Svelte
[**.svelte]
indent_size = 4

# VanillaJS
[**.js]
indent_size = 4

# Vue
[**.vue]
indent_size = 4
